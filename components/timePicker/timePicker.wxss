}
.dt-display {
  display: flex!important;
  padding: 10px;
  /* border: 1px solid #eee; */
  border-radius: 6px;
  position: absolute;
  bottom: 20rpx;
  left: 132rpx!important;
  border: none!important;
  background: #ffffff;
  color: #cbc9d6;
  font-size: 7rpx;
  z-index: 10000;
  font-size: 26rpx!important;
  font-weight: 400!important;
  width:442rpx!important;
  height: 75rpx!important;
