  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  background: #6b6ed4;
  border-radius: 58%;
  color: #fff;
  background-size: cover;
  /* 等比例放大，覆盖元素 */
  background-position: center;
  /* 居中对齐 */
  background-repeat: no-repeat;
  /* 不平铺重复 */
}

.box .card-1 .card-1-1 .evaluate .review-card .user-evaluate {
  overflow: hidden;
