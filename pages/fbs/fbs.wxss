@charset "UTF-8";
.box {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #6a72d9;
}

.box .location {
  display: flex;
  justify-content: center;
  /* 水平居中 */
  align-items: center;
  /* 垂直居中 */
  height: 180rpx;
  background: #7880dd;
  padding: 0 20rpx;
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.23);
}

.box .location .coordinate {
  color: #ffffff;
  font-size: 25rpx;
  line-height: 1.4;
  word-break: break-word;
  white-space: normal;
  font-weight: 600;
}

.box .userinfo {
  display: flex;
  height: 80rpx;
  align-items: center;
  margin: 0 25rpx;
  gap: 19rpx;
  margin-top: 31rpx;
  background: #7880dd;
  border-radius: 10rpx;
  padding: 10rpx;
}

.box .userinfo .user-img .img-btn {
  height: 80rpx;
  width: 80rpx;
  padding: 0;
  border: none;
  background: none;
}

.box .userinfo .user-img .img-btn .img-img {
  display: block;
  width: 100%;
  height: 100%;
}

.box .userinfo .user-name {
  font-size: 24rpx;
  color: #ffff;
  width: 160rpx;
  /* 背景渐变动画关键帧 */
}

.box .userinfo .user-name .name {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.box .userinfo .user-name .time {
  font-size: 21rpx;
}

.box .userinfo .user-name .time .online {
  color: #b9b9b9;
}

.box .userinfo .user-name .time-status {
  width: 21rpx;
  height: 21rpx;
  border-radius: 50%;
  display: inline-block;
  position: relative;
  top: 6rpx;
  margin-right: 7rpx;
  /* 渐变背景 */
  background: linear-gradient(90deg, #13c419, #919191);
  background-size: 200% 200%;
  /* 放大背景，便于移动 */
  /* 循环动画 */
  animation: gradientMove 2s ease-in-out infinite;
}

@keyframes gradientMove {
  0% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0% 50%;
  }
}

.box .search {
  margin: 0 25rpx;
  margin-top: 30rpx;
  margin-bottom: 17rpx;
  background: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.23);
}

.box .search .se {
  padding: 0 0;
}

.box .search .s-p {
  width: 80%;
  margin: 22rpx auto;
  padding-top: 20rpx;
}

.box .search .s-p .s-p-1 {
  height: 70rpx;
  border: 1rpx #d2d2d2 solid;
  border-radius: 9rpx;
  font-size: 25rpx;
  padding-left: 21rpx;
  padding-right: 60rpx;
}

.box .search .s-b {
  width: 80%;
  margin: 16rpx auto;
  padding-bottom: 10rpx;
}

.box .card-1 {
  display: flex;
  justify-content: center;
  justify-items: center;
  flex-wrap: wrap;
  overflow-y: auto;
  box-sizing: border-box;
}

.box .card-1 .card-1-1 {
  width: 310rpx;
  margin: 14rpx 14rpx;
  background: #ffff;
  border-radius: 10rpx;
  display: inline-grid;
  padding: 10rpx;
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.23);
}

.box .card-1 .card-1-1 .online-status {
  position: relative;
  bottom: 14rpx;
  width: 20rpx;
  height: 20rpx;
}

.box .card-1 .card-1-1 .img, .box .card-1 .card-1-1 .addr, .box .card-1 .card-1-1 .distance, .box .card-1 .card-1-1 .tags, .box .card-1 .card-1-1 .online, .box .card-1 .card-1-1 .group-status, .box .card-1 .card-1-1 .show-join-user {
  display: flex;
  justify-content: center;
}

.box .card-1 .card-1-1 .group-status {
  gap: 16rpx;
  padding: 10rpx;
}

.box .card-1 .card-1-1 .show-join-user {
  justify-content: flex-start;
}

.box .card-1 .card-1-1 .show-join-user .o-user {
  width: 49rpx;
  height: 49rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  background: #6b6ed4;
  border-radius: 58%;
  color: #fff;
  background-size: cover;
  /* 等比例放大，覆盖元素 */
  background-position: center;
  /* 居中对齐 */
  background-repeat: no-repeat;
  /* 不平铺重复 */
}

.box .card-1 .card-1-1 .addr .t-f {
